<Survey>
  <!-- The Short name is used when the survey is part of a list -->
  <ShortName> 408MHz,0408MHz </ShortName>
  
  <!-- This is a more complete descriptive name -->
  <Name>HI All-Sky Continuum Survey</Name>
  
  <!-- A text description of the survey.  This may include HTML and
       if so would normally be included in a CDATA element. -->
  <Description>
   <![CDATA[
This survey is a mosaic of data taken at Jodrell Bank, Effelsberg and Parkes
telescopes.  The data was distributed in the NRAO <i>Images from the
Radio Sky</i> CD ROM.
    ]]>
  </Description>
  
  <!-- These settings are used where the user may not have made an explicit selection
       and where no system defaults exist.
    -->
  <Settings>
    <!-- The scale of this image -->
    <Scale> 0.3515625 </Scale>
    <!-- Other surveys with identical image geometries -->
    <GeometryTwin></GeometryTwin>
  </Settings>
  
  <!-- The MetaTable includes a set of standard metadata about the survey -->
  <MetaTable>
    <Provenance> Max Planck Institute for Radio Astronomy, generated by Glyn Haslam </Provenance>
    <Copyright>  Max-Planck-Institut fur Radioastronomie (permission for educational and private non-commercial use granted without further
    request) </Copyright>
    <Regime>     Radio         </Regime>
    <NSurvey>    1             </NSurvey>
    <Frequency>  408 MHz       </Frequency>
    <Bandpass>   406.25-409.75 MHz </Bandpass>
    <Coverage>   All-sky       </Coverage>
    <PixelScale> 0.3515 degrees/pixel </PixelScale>
    <PixelUnits> Kelvins       </PixelUnits>
    <Resolution> 0.85 degrees  </Resolution>
    <CoordinateSystem> Galactic</CoordinateSystem>
    <Projection> Rectangular (CAR) </Projection>
    <Epoch>
     <![CDATA[
     Jodrell Bank: 1965-11 to 1966-02 and 1978-08 to 1979-09 <br>
     MPI: 1971-07 to 1972-02 <br>
     PKS: 1973-12 to 1975-05
     ]]>
    </Epoch>
    <Reference>
      <![CDATA[
      <a href="http://adsabs.harvard.edu/abs/1982A%26AS...47....1H">
        Haslam <i>et al.</i>, 1982,<i>A&#38AS</i>47, 1 (ADS)</a>.
      ]]>
    </Reference>
  </MetaTable>
  
  <!-- Online text is displayed in a HTML rendering of output.
       The online text can include the special strings $ra,$dec and $size
       which are replaced by the J2000 RA, J2000 Dec or size in degrees
       of the search just completed.  If online text is present
       it will usually contain XML and should be within a CDATA element.
    -->
  <OnlineText/>

  <!-- The text included in the FITS element should be added to the FITS
       header for the image generated by the file.  Note that we
       do not include the MetaTable information which may be extracted
       from the MetaTable elements.  We include the FITS element in
       a CDATA to preserve any special characters and spacing
    -->
  <FITS>
<![CDATA[
SURVEY  = '408mhz  '
BUNIT   = 'K       '                  / Brightness temperature in Kelvins
COMMENT Properties of original survey:
COMMENT Provenance  - Max Planck Institute for Radio Astronomy
COMMENT               generated by Glyn Haslam
COMMENT Copyright - Public domain
COMMENT Frequency - 0408 MHz
COMMENT Pixel Scale - 0.3515 degrees/pixel
COMMENT Pixel Units - Kelvins
COMMENT Resolution - 0.85 degrees
COMMENT Coordinate system - Galactic
COMMENT Projection - Rectangular
COMMENT Reference - Haslam et al, 1982, A&AS47, 1. 
]]>
  </FITS>
  
  <!-- The Images area includes descriptors of the images in the survey
       and replaces the config file in the previous version of SkyView.
       Each Image line has 4 tokens: filename, J2000 RA, J2000 Dec and
       Epoch of the image.
    -->
  <Images>
    <!-- The File Prefix, if present, is prepended to every file name -->
    <!-- Included in the SkyView JAR file -->
    <FilePrefix> surveys/data/ </FilePrefix>
    
    <!-- The Image factory is the name of a class implementing the ImageFactory
         interface that can be used to create an image given the full
	 file name. -->
    <ImageFactory>
         skyview.survey.FitsImageFactory
    </ImageFactory>
    
    <!-- The image size gives the minimum dimension of an image. -->
    <ImageSize> 200 </ImageSize>
    
    <Image>408mhz.fits 0. 0. 1980</Image>
  </Images>
</Survey>
